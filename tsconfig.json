{
  "compilerOptions": {
    "target": "es2024",
    "module": "esnext",
    "lib": ["es2024"],
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "test/**/*", "bin/**/*"],
  "exclude": ["node_modules"]
}
